extends layout

block content
  h1= title
  p Welcome to #{title}
  table.simpleTable
    thead
      tr
        th user name
        th user age
        th user email
    tbody
      each user in users
        tr
          td #{user.name}
          td #{user.age}
          td #{user.email}
  ul
    each user in users
      li #{user.name}
